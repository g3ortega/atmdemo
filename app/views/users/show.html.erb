<h2>Perfil de Usuario</h2>


<legend>Detalles de usuario</legend>

<p>
  <strong>Nombre:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Apellido:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Correo:</strong>
  <%= @user.email %>
</p>

<% unless @user.last_sign_in_at.nil? %>
    <legend>Detalles de sesión</legend>

    <p>
      <strong>Cantidad de Inicios de Sesión:</strong>
      <%= @user.sign_in_count %>
    </p>

    <p>
      <strong>Último inicio de sesión:</strong>
      hace <%= distance_of_time_in_words(@user.last_sign_in_at, Time.now) %>
    </p>

    <p>
      <strong>IP de último inicio de sesión:</strong>
      <%=  @user.last_sign_in_ip %>
    </p>

    <p>
      <strong>Usuario creado hace:</strong>
      <%= time_ago_in_words(@user.created_at) %>
    </p>

    <p>
      <strong>Usuario actualizado hace:</strong>
      <%= time_ago_in_words(@user.updated_at) %>
    </p>

<% end %>

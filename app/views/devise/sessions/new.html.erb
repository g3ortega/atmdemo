<div class="header">
  <h2>Iniciar Sesión</h2>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="col-sm-1">
      </div>
      <div class="col-sm-11">
        <div class="row">
          <div class="col-sm-1">
            <%= f.label :email, "Correo: " %>
          </div>
          <div class="col-sm-5">
            <%= f.text_field :first_name, class: 'form-control', placeholder: "Nombre" %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-1">
            <%= f.label :email, "Contraseña: " %>
          </div>
          <div class="col-sm-5">
            <%= f.password_field :password, class: 'form-control', placeholder: "Contraseña"%>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>
        <br/>
        <div><%= f.submit "Iniciar Sesión", class: "btn btn-success" %></div>

      </div>

    </div>

<% end %>
<br/><br/>
<p>No estás registrado?</p>
<%= render "devise/shared/links" %>

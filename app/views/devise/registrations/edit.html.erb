<h2>Editar Usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%# devise_error_messages! %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.text_field :first_name, class: 'form-control', placeholder: "Nombre" %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :last_name, class: 'form-control', placeholder: "Apellido" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= f.email_field :email, class: 'form-control', placeholder: "Correo" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= f.password_field :password, class: 'form-control', placeholder: "Contrase침a"%>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirmar Contrase침a" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= f.password_field :current_password, class: 'form-control', placeholder: "Contrase침a Actual" %>
      </div>
    </div>

  <div><%= f.submit "Actualizar" %></div>
<% end %>

